@model IEnumerable<ProductManager.Models.Product>

<!DOCTYPE html>

<html>
<head>
    <title>List all Employees</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h1>List all Employees</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ID</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.Category</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>